{
  "$schema": "https://json.schemastore.org/prettierrc",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": ["^@minimumapp/(.*)$", "^[./]"],
  "overrides": [
    {
      "files": ["apps/**/*.{ts,tsx}", "../../apps/**/*.{ts,tsx}"],
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    }
  ]
}
